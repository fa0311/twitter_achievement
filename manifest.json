{
    "name": "ツイートコレクター",
    "description": "ツイートゲットだぜ！",
    "version": "0.0.1",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "html/popup.html"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [{
        "matches": [
            "https://twitter.com/*"
        ],
        "js": [
            "js/lib/jquery-3.5.1.min.js",
            "js/main.js"
        ],
        "css": [
            "css/main.css"
        ]
    }]
}